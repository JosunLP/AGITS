{
  "name": "agits-platform",
  "version": "1.0.0",
  "description": "AGI Platform - A modular microservices architecture for Artificial General Intelligence",
  "type": "module",
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,json}",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t agits-platform .",
    "docker:run": "docker run -p 3000:3000 agits-platform",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "start:services": "docker-compose up -d",
    "stop:services": "docker-compose down"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.2",
    "@fastify/jwt": "^7.2.4",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/sensible": "^6.0.3",
    "@fastify/static": "^8.2.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/auto-instrumentations-node": "^0.40.0",
    "@opentelemetry/instrumentation": "^0.45.1",
    "@opentelemetry/sdk-node": "^0.45.1",
    "@pinecone-database/pinecone": "^1.1.2",
    "@types/node": "^20.10.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "fastify-plugin": "^4.5.1",
    "helmet": "^7.1.0",
    "kafkajs": "^2.2.4",
    "mongoose": "^8.0.3",
    "neo4j-driver": "^5.15.0",
    "pino": "^8.16.2",
    "pino-pretty": "^10.3.1",
    "prometheus-gc-stats": "^0.6.4",
    "redis": "^4.6.11",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/cors": "^2.8.19",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.0.2",
    "playwright": "^1.40.1",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.3.2",
    "vite": "^5.0.4",
    "vite-plugin-dts": "^3.6.4",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "agi",
    "artificial-intelligence",
    "microservices",
    "kubernetes",
    "typescript",
    "machine-learning",
    "cognitive-services",
    "neuroscience"
  ],
  "author": "AGITS Team",
  "license": "MIT"
}
