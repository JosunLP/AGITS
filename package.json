{
  "name": "agits-platform",
  "version": "1.0.0",
  "description": "AGI Platform - A modular microservices architecture for Artificial General Intelligence",
  "type": "module",
  "scripts": {
    "start": "tsx src/index.ts",
    "demo": "tsx src/demo.ts",
    "demo:standalone": "tsx src/run-standalone-demo.ts",
    "test:quick": "tsx src/quick-test.ts",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,json}",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t agits-platform .",
    "docker:run": "docker run -p 3000:3000 agits-platform",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "start:services": "docker-compose up -d",
    "stop:services": "docker-compose down"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.3",
    "@fastify/static": "^8.2.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.0",
    "@opentelemetry/instrumentation": "^0.203.0",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@pinecone-database/pinecone": "^6.1.1",
    "@types/node": "^24.0.13",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.2.0",
    "fastify": "^5.4.0",
    "fastify-plugin": "^5.0.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "kafkajs": "^2.2.4",
    "mongodb": "^6.17.0",
    "mongoose": "^8.16.3",
    "neo4j-driver": "^5.28.1",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "prometheus-gc-stats": "^1.1.0",
    "redis": "^5.6.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.0",
    "@types/cors": "^2.8.19",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "playwright": "^1.54.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^7.0.3",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "agi",
    "artificial-intelligence",
    "microservices",
    "kubernetes",
    "typescript",
    "machine-learning",
    "cognitive-services",
    "neuroscience"
  ],
  "author": "AGITS Team",
  "license": "MIT"
}
